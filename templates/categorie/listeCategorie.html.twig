{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}


<h1 class="text-center pt-2">Liste des categorie</h1>

<div class="row"> 

{% for laCategorie in lesCategories %}
<div class="col-sm-12 col-md-12 col-lg-4 col-xl-3 mx-auto">
                <div class="card mb-3">
                <h4 class="card-header">{{laCategorie.libelle}}</h4>
                   <img class="avatar mx-auto my-3" style="height:auto; max-width :200px; display:block;" src=" {{laCategorie.image}}" alt="Card image">

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{laCategorie.description}}</li>
                </ul>
                <div class="card-body">
                    <a href="{{path("fichecategorie",{'id': laCategorie.id})}}" class="btn btn-success btn-block text-center">Détail ...</a>
                
                </div>
                </div>
</div>
    
{% endfor %}
</div>

{% endblock %}
